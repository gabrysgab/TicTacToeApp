<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:rowCount="3"
        tools:context="com.mgabrynowicz.tictactoe.MainActivity">

        <Button
            android:id="@+id/gameGrid0"
            android:width="100dp"
            android:height="100dp"
            android:tag="0"
            android:text="Button" />

        <Button
            android:id="@+id/gameGrid1"
            android:width="100dp"
            android:height="100dp"
            android:tag="1"
            android:text="Button" />

        <Button
            android:id="@+id/gameGrid2"
            android:width="100dp"
            android:height="100dp"
            android:tag="2"
            android:text="Button" />

        <Button
            android:id="@+id/gameGrid3"
            android:width="100dp"
            android:height="100dp"
            android:tag="3"
            android:text="Button" />

        <Button
            android:id="@+id/gameGrid4"
            android:width="100dp"
            android:height="100dp"
            android:tag="4"
            android:text="Button" />

        <Button
            android:id="@+id/gameGrid5"
            android:width="100dp"
            android:height="100dp"
            android:tag="5"
            android:text="Button" />

        <Button
            android:id="@+id/gameGrid6"
            android:width="100dp"
            android:height="100dp"
            android:tag="6"
            android:text="Button" />

        <Button
            android:id="@+id/gameGrid7"
            android:width="100dp"
            android:height="100dp"
            android:tag="7"
            android:text="Button" />

        <Button
            android:id="@+id/gameGrid8"
            android:width="100dp"
            android:height="100dp"
            android:tag="8"
            android:text="Button" />


    </GridLayout>

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="New Game" />


</LinearLayout>